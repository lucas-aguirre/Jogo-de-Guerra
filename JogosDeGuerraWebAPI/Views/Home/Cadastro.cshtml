

@{
    ViewBag.Title = "Cadastro";
}
<div class="container centered">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto register-form">
            <div class="card card-signin my-5">
                <div class="card-body form-visual">
                    <h5 class="h5-red text-center">Cadastre-se</h5>
                    <form>
                        <div>
                            @ViewBag.Message
                        </div>
                        <div class="form-group">
                            <label class="label-red" for="email">Endereço de e-mail</label>
                            <input name="email" type="email" class="form-control" id="email" placeholder="Seu e-mail" required autofocus>
                        </div>
                        <div class="form-group">
                            <label class="label-red" for="Password">Sua Senha</label>
                            <input name="Password" type="password" class="form-control" id="email-password" placeholder="Sua senha" required>
                        </div>
                        @*<div class="form-group">
                            <label class="label-red" for="ConfirmPassword">Confirme sua Senha</label>
                            <input name="ConfirmPassword" type="password" class="form-control" id="confirm-password" placeholder="Confirme sua senha" required>
                        </div>*@
                        <div>
                            <button onclick="register()" class="btn btn-default btn-outline-success btn-block text-uppercase" type="button">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Styles.Render("~/Content/Login.css")

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.css">
@section MeusScripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.js"></script>
    <script type="text/javascript">

        function showError(jqXHR) {

            var response = jqXHR.responseJSON;

            if (response) {
                $.alert({
                    title: 'Oops...',
                    content: response.error_description,
                    theme: 'modern',
                });

                if (response.Message) {
                    self.errors.push(response.Message);
                }

                if (response.ModelState) {
                    var modelState = response.ModelState;
                    for (var prop in modelState) {
                        if (modelState.hasOwnProperty(prop)) {
                            var msgArr = modelState[prop]; // expect array here
                            if (msgArr.length) {
                                for (var i = 0; i < msgArr.length; ++i) self.errors.push(msgArr[i]);
                            }
                        }
                    }
                }

                if (response.error) {
                    self.errors.push(response.error);
                }

                if (response.error_description) {
                    console.log("Aqui tb");
                    self.errors.push(response.error_description);
                }
            }
        }

        function register() {
            var loginData = {
                Email: $("#email").val(),
                Password: $("#email-password").val(),
               // ConfirmPassword: $("#confirm-password").val(),
            };

            // if (!loginData.Email || !loginData.Password || !loginData.ConfirmPassword) {
            if (!loginData.Email || !loginData.Password ) {
                $.alert({
                    title: 'Oops...',
                    content: 'Favor preencher todos os campos',
                    theme: 'modern',
                });
                return false;
            }

            $.ajax({
                type: 'POST',
                url: baseUrl + '/api/Account/Register',
                data: loginData
            }).done(function (data) {
                //$.confirm({
                //    title: 'Sucesso',
                //    content: 'Usuário registrado com sucesso',
                //    theme: 'modern',
                //});
                sessionStorage.setItem('accessToken', data.token_type + " " + data.access_token);
                sessionStorage.setItem('emailUsuario', data.userName);
                window.location.href = baseUrl + "/BatalhasMVC/Index";
            }).fail(showError);
        }

    </script>
}
